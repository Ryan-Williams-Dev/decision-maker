<% include partials/_head_tag.ejs %>

<body>
  <%- include('partials/_navbar') %>
  <header>
    <h1 class="page-title">Rank these options!</h1>
  </header>
  <h2 class="poll_question"><%= poll.question %></h2>

  <form action="/api/polls/:id" method="post" class="vote_submission">
    <input type="hidden" name="poll_id" value="<%= poll.id %>">

    <section id="sortable">
      <div class="option" id="option_1">
        <div class="option-info">
          <h3><%= poll.answer_1 %></h3>
          <p><%= poll.description_1 %></p>
        </div>
        <span class="order">
          1
          <input type="hidden" name="option_1" value="3">
        </span>
      </div>

      <div class="option" id="option_2">
        <div class="option-info">
          <h3><%= poll.answer_2 %></h3>
          <p><%= poll.description_2 %></p>
        </div>
        <span class="order">
          2
          <input type="hidden" name="option_2" value="2">
        </span>
      </div>

      <div class="option" id="option_3">
        <div class="option-info">
          <h3><%= poll.answer_3 %></h3>
          <p><%= poll.description_3 %></p>
        </div>
        <span class="order">
          3
          <input type="hidden" name="option_3" value="1">
        </span>
      </div>

      <div class="option" id="option_4">
        <div class="option-info">
          <h3><%= poll.answer_4 %></h3>
          <p><%= poll.description_4 %></p>
        </div>
        <span class="order">
          4
          <input type="hidden" name="option_4" value="0">
        </span>
      </div>
    </section>

      <div class="voter_name">
        <% if(poll.name_required) { %>
          <input type="text" class="voter-input" placeholder="Name (required)" name="voter_name" required>
        <% } else { %>
          <input type="text" class="voter-input" placeholder="Name (optional)" name="voter_name">
        <% } %>
      </div>

      <div class="poll-submit">
        <button class="btn btn-primary vote_submit_button" type="submit">Submit Your Rankings!</button>
      </div>
    </form>

</body>

</html>
